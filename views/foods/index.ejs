<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <% if (pantry.length === 0) { %>
      <p>No pantry items found.</p>
    <% } else { %>
      <ul>
        <% pantry.forEach(food => { %>
          <li>
            <strong><%= food.name %> - <%= food.quantity %></strong> - 
            <a
            href="/users/<%= user._id %>/foods/<%= food._id %>/edit"
          >
            Edit Item
          </a>
          <form
            action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE"
            method="POST"
          >
            <button type="submit">Delete Item</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <% } %>
    <a href="/users/<%=user._id%>/foods/new">Add a new food item</a>
  </body>
</html>
